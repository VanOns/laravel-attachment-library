{
    "name": "van-ons/laravel-attachment-library",
    "description": "A Laravel library for attaching files to Eloquent models.",
    "keywords": [
        "van ons",
        "laravel",
        "laravel-attachment-library",
        "attachments",
        "library",
        "eloquent"
    ],
    "homepage": "https://github.com/VanOns/laravel-attachment-library",
    "license": "MIT",
    "authors": [
        {
            "name": "Dangelo Brusorio",
            "email": "dangelo@van-ons.nl"
        },
        {
            "name": "Danique Wijnalda",
            "email": "danique@van-ons.nl"
        }
    ],
    "require": {
        "php": ">=8.2",
        "league/glide-symfony": "^2.0",
        "spatie/laravel-package-tools": "^1.16"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.64",
        "larastan/larastan": "^2.9",
        "orchestra/testbench": "^8.21",
        "phpunit/phpunit": "^10.1"
    },
    "scripts": {
        "analyse": "./vendor/bin/phpstan analyse --memory-limit=1G",
        "format": "./vendor/bin/php-cs-fixer fix",
        "format:check": "./vendor/bin/php-cs-fixer check",
        "test": "./vendor/bin/phpunit"
    },
    "autoload": {
        "psr-4": {
            "VanOns\\LaravelAttachmentLibrary\\": "src",
            "VanOns\\LaravelAttachmentLibrary\\Database\\Factories\\": "database/factories"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "VanOns\\LaravelAttachmentLibrary\\Test\\": "tests"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "VanOns\\LaravelAttachmentLibrary\\LaravelAttachmentLibraryServiceProvider",
                "VanOns\\LaravelAttachmentLibrary\\GlideServiceProvider"
            ]
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
